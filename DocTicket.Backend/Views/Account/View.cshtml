@model AppUser

<div class="d-flex justify-content-center">
    <div class="d-inline-block align-top m-auto justify-content-center text-center">
        <div class="d-flex flex-column">
            <h5>Фамилия: @Model.LastName</h5>
            <hr>
        </div>
        <div class="d-flex flex-column">
            <h5>Имя: @Model.FirstName</h5>
            <hr>
        </div>
        <div class="d-flex flex-column">
            <h5>Отчество: @Model.Patronymic</h5>
            <hr>
        </div>
        <div class="d-flex flex-column">
            <h5>Email: @Model.Email</h5>
            <hr>
        </div>
        <a class="btn btn-primary" asp-controller="Account" asp-action="Edit">Редактировать</a>
    </div>
</div>