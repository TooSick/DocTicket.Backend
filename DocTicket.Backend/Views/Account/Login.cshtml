@model LoginViewModel

<div class="d-flex justify-content-center">
    <div class="d-inline-block align-top form-signin m-auto justify-content-center text-center">
        <img class="mb-4 mx-auto" src="~/images/DocTicket (1).png" alt="" width="72" height="72">
        <form asp-action="Login" method="post">
            @if (TempData["Error"] != null)
            {
                <div class="col-md-12 alert alert-danger">
                    <span>@TempData["Error"] </span>
                </div>
            }
            <h1 class="h3 mb-3 fw-normal">Пожалуйста войдите</h1>

            <div class="form-floating">
                <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" asp-for="Email">
                <label for="floatingInput" asp-for="Email">Email адрес</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input type="password" class="form-control" id="floatingPassword" placeholder="Пароль" asp-for="Password">
                <label for="floatingPassword" asp-for="Password">Пароль</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button class="w-100 btn btn-lg btn-primary mb-2" type="submit">Войти</button>
            <a class="w-100 btn btn-lg btn-light" asp-controller="Home" asp-action="Index">Отмена</a>
            <p class="mt-5 mb-3 text-muted d-flex justify-content-center">© 2017–2022</p>
        </form>
    </div>
</div>
