@model ShortPolyclinicInfoViewModel

<div class="col">
    <div class="card d-flex py-0 border-primary h-100">
        <div class="card-body d-flex justify-content-around">
            <div class="d-flex align-items-start flex-column mb-3">
                <div class="mb-auto p-2">
                    <h5 class="card-title">@Model.Title</h5>
                    <address>@Model.Address</address>
                </div>
                <div class="p-2">
                    <p class="card-text">Регистратура:</p>
                    <ul> 
                        @foreach (var registryNumber in Model.RegistryNumbers)
                        {
                            <li class="card-text list-group-item">@registryNumber.Number</li>
                        }
                    </ul>
                </div>
            </div>
            <div>
                <ul class="text-decoration-none">
                    @foreach (var workingHour in Model.WorkingHours)
                    {
                        <li class="card-text list-group-item">@workingHour.DayOfWeek.ToString("ddd", new CultureInfo("ru-Ru")): @workingHour.StartTime - @workingHour.EndTime</li>
                    }
                </ul>
            </div>
            <div>
                <a class="btn btn-primary btn-lg" asp-action="Details" asp-route-id="@Model.Id">Заказать талон</a>
            </div>
        </div>
    </div>
</div>
